{% extends 'base2.html.twig' %}

{% block body %}


	<div class="bs-example" data-example-id="striped-table " style="margin-bottom:2%;margin-top:2%;">

		<table class="  table-default table-hover table-responsive table-striped container" style="font-family: 'Bubblegum Sans', cursive; font-size:1.2vw;">
			<thead>
				<tr class="table-active border-bottom border-dark border-2" style="font-size:1.7vw;">
					<th style="text-align:center;">ID</th>
					<th style="text-align:center;">Name</th>
					<th style="text-align:center;">Unit Price</th>
					<th style="text-align:center;">Quantity</th>
					<th style="text-align:center;">Description</th>
					<th style="text-align:center;"></th>
				</tr>
			</thead>
			<tbody>
				{% for product in products %}
					<tr class="table-hover border-bottom border-dark ">
						<th style="text-align:center;">{{ product.id }}</th>
						<td style="text-align:center;">{{ product.name }}</td>
						<td style="text-align:center;">{{ product.unitPrice }}</td>
						<td style="text-align:center;">{{ product.quantity }}</td>
						<td>{{ product.description }}</td>

						<td>
							<div class="d-flex justify-content-around">
								<a data-bs-toggle="tooltip" data-bs-placement="right" href="{{ path('product_details', {'id': product.id}) }}" style="padding-top:4%; font-size:1.7vw;" onmouseover="this.style.color='#008000'" onmouseout="this.style.color='#000'">
									<i class="bi bi-pencil-fill"></i>
								</a>

								<a data-bs-toggle="tooltip" data-bs-placement="right" href="{{ path('product_edit', {'id': product.id}) }}" style="padding-top:4%; font-size:1.7vw;" onmouseover="this.style.color='#FFD700'" onmouseout="this.style.color='#000'">
									<i class="bi bi-tools"></i>
								</a>

								<a class="btn btn-outline-danger btn-lg  rounded-pill" data-bs-toggle="tooltip" data-bs-placement="right" href="{{ path('product_delete', {'id': product.id}) }}">Delete</a>
							</div>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
