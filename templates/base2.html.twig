<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=chrome">
		<meta
		name="viewport" content="width=device-width, initial-scale=1">
		<!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
		<meta name="description" content="">
		<meta name="author" content="">
		<link rel="icon" href="../../favicon.ico">
		<link rel="canonical" href="https://getbootstrap.com/docs/3.4/examples/starter-template/">
		<title>
			{% block title %}Clowns Store
			{% endblock %}
		</title>
		{% block stylesheets %}
			<link rel="stylesheet" href="{{asset('build/app.css')}}">
		{% endblock %}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Bubblegum+Sans&family=Nanum+Pen+Script&display=swap" rel="stylesheet">
		<link
		rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
		<!-- CSS only -->
		<link
		href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
		<!-- JavaScript Bundle with Popper -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">

	</head>

	<!-- Body -->

	<body>
		<!-- navbar -->
		<nav class="navbar navbar-expand-md navbar-white bg-white container ">
			<div class="container-fluid ">
				<a class="navbar-brand " style="font-weight:bolder; font-size:20px" href="{{ path('app_home') }}">Clowns Store</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div
					class=" navbar" id="mynavbar">
					<!-- End Home Navbar -->
					{% if app.user %}
						<!-- Product Navbar -->
						<div class="collapse navbar-collapse" id="navbarNavDarkDropdown">
							<ul
								class="navbar-nav">
								<!-- Home Navbar -->
								<li class="nav-item "></li>
								<li>
									<a class="nav-link text-dark font-monospace" href="{{ path('app_home') }}">Home</a>
								</li>
							</ul>
							<ul class="navbar-nav">
								<li class="nav-item dropdown">
									<a class="nav-link dropdown-toggle text-dark font-monospace" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
										Products
									</a>
									<ul class="dropdown-menu dropdown-menu-white" aria-labelledby="navbarDarkDropdownMenuLink">
										{% if is_granted('ROLE_ADMIN') %}
											<li>
												<a class="dropdown-item font-monospace" href="{{ path('product_create') }}">Add Product</a>
											</li>
										{% endif %}
										<li>
											<a class="dropdown-item font-monospace" href="{{ path('product_list') }}">View Product</a>
										</li>
									</ul>
								</li>
							</ul>
							<!-- End Product Navbar -->

							<!-- Category Navbar -->
							<ul class="navbar-nav">
								<li class="nav-item dropdown">
									<a class="nav-link dropdown-toggle text-dark font-monospace" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
										Categories
									</a>
									<ul class="dropdown-menu dropdown-menu-white" aria-labelledby="navbarDarkDropdownMenuLink">
										{% if is_granted('ROLE_ADMIN') %}
											<li>
												<a class="dropdown-item font-monospace" href="{{ path('category_create') }}">Add Category</a>
											</li>
										{% endif %}
										<li>
											<a class="dropdown-item font-monospace" href="{{ path('category_list') }}">View Category</a>
										</li>
									</ul>
								</li>
							</ul>
							<!-- End Category Navbar -->
							<!-- Manufacturer Navbar -->
							<ul class="navbar-nav">
								<li class="nav-item dropdown">
									<a class="nav-link dropdown-toggle text-dark font-monospace" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
										Manufacturer
									</a>
									<ul class="dropdown-menu dropdown-menu-white" aria-labelledby="navbarDarkDropdownMenuLink">
										{% if is_granted('ROLE_ADMIN') %}
											<li>
												<a class="dropdown-item font-monospace" href="#">Add Manufacturer</a>
											</li>
										{% endif %}
										<li>
											<a class="dropdown-item font-monospace" href="#">View Manufacturer</a>
										</li>
									</ul>
								</li>
							</ul>
							<!-- End Manufacturer Navbar -->
							<a class="nav-link text-dark font-monospace" href="{{ path('app_logout') }}">Log Out</a>

						</ul>
					{% else %}
						<ul class="navbar-nav">
							<a class="nav-link text-dark font-monospace" href="{{ path('app_login') }}">Log In</a>
						</ul>
						<ul class="navbar-nav">
							<a class="nav-link text-dark font-monospace" href="{{ path('app_register') }}">Register</a>
						</ul>
					{% endif %}
				</div>
			</div>
			<form class="d-flex">
				<input class="form-control me-2" type="text" placeholder="Search">
				<button class="btn btn-outline-dark btn-sm font-monospace" type="button">Search</button>
			</form>
		</nav>

		<hr
		style="position:relative; left:25%; border-width:2px;">
		<!-- navbar -->
		<div class="">
			<div class="row">
				<div class="col-12" style="height:auto">
					{% for flash_message in app.session.flashBag.get('notice') %}
						<div class="alert alert-success">{{ flash_message }}</div>
					{% endfor %}
					{% for flash_message in app.session.flashBag.get('error') %}
						<div class="alert alert-danger">{{ flash_message }}</div>
					{% endfor %}
					{% block body %}{% endblock %}
				</div>
			</div>
		</div>
	</body><!--container -->{% block javascripts %}{% endblock %}
	<hr style=" width:70%; position:relative; left:15%; border-top: 2px solid; color:#000000 ">
	<footer class="bg-white text-center text-dark">
		<div class="containerp-4"><!-- Section: Social media --><sectionclass="mb-4">
				<!-- Facebook -->
				<a class="btn btn-outline-dark m-1" href="#!" role="button" style="border-radius: 20%; border: 2px solid white;">
					<i class="fab fa-facebook-f"></i>
				</a><!-- Twitter --><a class="btn btn-outline-dark  m-1" href="#!" role="button" style="border-radius:20%; border: 2px solid white;">
					<i class="fab fa-twitter"></i>
				</a><!-- Google --><a class="btn btn-outline-dark  m-1" href="#!" role="button" style="border-radius: 20%; border: 2px solid white;">
					<i class="fab fa-google"></i>
				</a><!-- Instagram --><a class="btn btn-outline-dark  m-1" href="#!" role="button" style="border-radius: 20%; border: 2px solid white;">
					<i class="fab fa-instagram"></i>
				</a><!-- Linkedin --><a class="btn btn-outline-dark  m-1" href="#!" role="button" style="border-radius: 20%; border: 2px solid white;">
					<i class="fab fa-linkedin-in"></i>
				</a><!-- Github --><a class="btn btn-outline-dark m-1" href="#!" role="button" style="border-radius: 20%; border: 2px solid white;">
					<i class="fab fa-github"></i>
				</a>
			</section><!-- Section: Social media --><!-- Section: Text --><section class="mb-4">
				<p class="fw-bold">This project is our team efforts, we have tried our best and hope to bring you the best experience!</p>
			</section>
		</div>
		<!-- Copyright -->
		<div class="text-center p-3 text-white" style="background-color:#000000;">Â© 2022 Copyright:
			<a class="text-white" href="{{ path('app_home') }}">
				Triple Clowns</a>
		</div>
		<!-- Copyright -->
	</footer><!-- Footer --></html>
