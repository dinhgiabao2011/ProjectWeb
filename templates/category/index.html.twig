{% extends 'base2.html.twig' %}

{% block body %}
    <div class="bs-example" data-example-id="striped-table " style="margin-bottom:2%;margin-top:2%;">

		<table class="  table-default table-hover table-responsive table-striped container" style="font-family: 'Bubblegum Sans', cursive; font-size:1.2vw;">
			<thead>
				<tr class="table-active border-bottom border-dark border-2" style="font-size:1.7vw;">
					<th style="text-align:center;">ID</th>
					<th style="text-align:center;">Category Name</th>
                    <td style="text-align:center;">Manipulation</td>
				</tr>
			</thead>
			<tbody>
				{% for category in categorys %}
					<tr class="table-hover border-bottom border-dark ">
						<th style="text-align:center;">{{ category.id }}</th>
						<td style="text-align:center;">{{ category.name }}</td>
                        
					{% if app.user %}
					
						<td>
							<div class="d-flex justify-content-around">
							
								<a data-bs-toggle="tooltip" data-bs-placement="right" title="View" href="{{ path('category_details', {'id': category.id}) }} " style=" color:#000; padding-top:4%; font-size:1.5vw;" onmouseover="this.style.color='#008000'" onmouseout="this.style.color='#000'">
									<i class="bi bi-file-text-fill" style=""></i>
								</a>
							{% if is_granted('ROLE_ADMIN') %}
								<a data-bs-toggle="tooltip" title="Edit" data-bs-placement="right" href="{{ path('category_edit', {'id': category.id}) }}" style="color:#000;padding-top:4%; font-size:1.5vw;" onmouseover="this.style.color='#DED63E'" onmouseout="this.style.color='#000'">
									<i class="bi bi-pencil-square"></i>
								</a>

								<a data-bs-toggle="tooltip" title="Delete" data-bs-placement="right" href="{{ path('category_delete', {'id': category.id}) }}" style="color:#000;padding-top:4%; font-size:1.5vw;" onmouseover="this.style.color='#d43133'" onmouseout="this.style.color='#000'">
									<i class="bi bi-trash3-fill"></i>
								</a>
							{% endif %}
							</div>
						</td>
						{% endif %}
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
